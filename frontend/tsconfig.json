{
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // "bundler" 대신 "node"를 권장합니다.
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // 최신 React 방식 (Next.js 기본 권장)
    "incremental": true,
    "baseUrl": ".", // 현재 폴더를 기준으로
    "paths": {
      "@/*": [
        "./*"
      ] // 예: "@/lib/utils"는 "frontend/lib/utils"를 가리킵니다.
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
